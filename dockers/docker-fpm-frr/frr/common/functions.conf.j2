{% macro get_ipv4_loopback_address(interfaces, loopbackname) -%}
{% set L = namespace(ip=None) %}
{% for name, prefix in interfaces|pfx_filter %}
{%   if name == loopbackname %}
{%     if prefix | ipv4 and prefix != None %}
{%       set L.ip = prefix %}
{%     endif %}
{%   endif %}
{% endfor %}
{{ L.ip }}
{%- endmacro %}

