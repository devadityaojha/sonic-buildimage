{% macro get_internal_interface(interfaces, port, attr1, attr2) -%}
{% set kintfs = [] %}
{% for intfname, values in interfaces.items() %}
{%   if port[interfaces[intfname][attr1][0]][attr2] == "Int" %}
{%      set kintfs = kintfs.append(intfname|string) %}
{%   endif %}
{% endfor %}
{{ kintfs|join(",") }}
{%- endmacro %}
